{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <div class="z-depth-1 form-container">
        <div class="logo"></div>
        <h2>Connexion !</h2>
        <style>
            form    {
                width: 100%;
            }

            form label.active{
                color: #ffb101 !important;
            }

            form input:focus{
                border-bottom-color: #ffb101 !important;
                box-shadow: 0 1px 0 0 #ffb101 !important;
            }
            .container{
                width: 100vw;
                height: calc(100vh - 87px);
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }

            .container > .form-container{
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                width: 100%;
                box-sizing: border-box;
                padding: 2em;
            }

            .container > .form-container > .logo{
                background-image: url("{{ asset('imgs/logo-full.svg') }}");
                width: 100%;
                height: 200px;
                background-repeat: no-repeat;
                background-position: center;
                margin: 2em;
                margin-bottom: 1em;
            }

            h2{
                color: #ffb101;
                font-size: 1.9em;
                margin: 0px;
                margin-bottom: 1em;
            }
        </style>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
                <div class="row">
                    <div class="input-field col s12"><input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus><label for="inputEmail" class="sr-only">Email</label></div>
                </div>

                <div class="row">
                    <div class="input-field col s12"><input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required><label for="inputPassword" class="sr-only">Password</label></div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn waves-effect waves-light amber right" type="submit">
                    Se connecter
                    <i class="material-icons right">send</i>
                </button>
                <input type="hidden" id="login__token" name="login[_token]" value="CaSGMyHpEHDc3CNvGWArdWq7sbvUeSiGVJfPeltEeWg">
        </form>
    </div>
</div>



    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</form>
{% endblock %}
